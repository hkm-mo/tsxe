{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "ES6",
            "DOM"
        ],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false
    },
    "include": [
        "src/**/*"
    ]
}
