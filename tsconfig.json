{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react",
        "jsxFactory": "TSXe.createElement",
        "jsxFragmentFactory": "TSXe.Fragment",
        "lib": [
            "ES6",
            "DOM"
        ],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*", "global.d.ts"
    ]
}
